<ContentControl x:Class="WpfTouchPerformance.SecondContentControl"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:WpfTouchPerformance="clr-namespace:WpfTouchPerformance"
                mc:Ignorable="d"
                d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid>
            <Grid>
                <Grid>
                    <Grid>
                        <Grid>
                            <Grid >
                                <ContentPresenter
                                    Content="{Binding Child, RelativeSource={RelativeSource AncestorType=WpfTouchPerformance:SecondContentControl, Mode=FindAncestor}}" />
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</ContentControl>